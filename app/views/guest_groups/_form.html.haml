%h1.overview.copy.line-5.blood R.S.V.P.
.rsvp_form
  = form_for @guest_group do |f|
    - if @guest_group.errors.any?
      #error_explanation
        %h2= "#{pluralize(@guest_group.errors.count, "error")} prohibited this RSVP from being saved:"
        %ul
          - @guest_group.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :full_name
      = f.text_field :full_name
    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :kids
      = f.number_field :kids
    .checkbox
      = f.label :plus_one
      = f.check_box :plus_one
    .field
      = f.label :vulnerabilities
      = f.text_area :vulnerabilities, :value => 'Examples: Silver Bullets, Garlic, CO2, Red Meat, Carrots.', :id => 'vul', :style => 'color:#C9C9C9'
    .actions
      = f.submit 'Submit RSVP'
.save_the_date
  = image_tag 'save_the_date.png'
